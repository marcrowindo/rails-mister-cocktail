<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo, height: 600, width: 800, crop: :fill %>

<ul>
  <% @doses.each do |dose| %>
    <li> <%= dose.description %> of <%= dose.ingredient.name %> <%= link_to "delete dose", dose_path(dose), method: :delete  %></li>
  <% end %>
</ul>

<%= link_to "add dose", new_cocktail_dose_path(@cocktail.id) %>
<%= link_to "back", cocktails_path %>
